# Etapa de compilaci칩n
FROM maven:3.9-eclipse-temurin-21 AS build
WORKDIR /app

# Copiar archivos de Maven para cachear dependencias
COPY pom.xml .
RUN mvn dependency:go-offline -B

# Copiar c칩digo fuente y compilar
COPY src ./src
RUN mvn clean package -DskipTests -B

# Etapa de producci칩n (imagen ligera)
FROM eclipse-temurin:21-jre-alpine
WORKDIR /app

# Copiar el JAR compilado
COPY --from=build /app/target/route-optimizer-0.0.1-SNAPSHOT.jar app.jar

# Exponer el puerto (Render asigna din치micamente)
EXPOSE 8080

# Variables de entorno por defecto
ENV SPRING_PROFILES_ACTIVE=prod

# Comando de inicio con optimizaciones de memoria
ENTRYPOINT ["java", "-Xmx512m", "-jar", "app.jar"]